{
  "name": "@sveltia/ui",
  "version": "0.15.13",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "github:sveltia/sveltia-ui"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && svelte-package -o package",
    "build:watch": "svelte-kit sync && svelte-package -o package --watch",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "format": "prettier --write .",
    "check": "pnpm run '/^check:.*/'",
    "check:audit": "pnpm audit",
    "check:cspell": "cspell --no-progress",
    "check:svelte": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:prettier": "prettier --check .",
    "check:eslint": "eslint .",
    "check:stylelint": "stylelint '**/*.{css,scss,svelte}'",
    "test": "playwright test",
    "test:unit": "vitest"
  },
  "dependencies": {
    "@lexical/code": "^0.17.0",
    "@lexical/dragon": "^0.17.0",
    "@lexical/history": "^0.17.0",
    "@lexical/link": "^0.17.0",
    "@lexical/list": "^0.17.0",
    "@lexical/markdown": "^0.17.0",
    "@lexical/rich-text": "^0.17.0",
    "@lexical/selection": "^0.17.0",
    "@lexical/table": "^0.17.0",
    "@lexical/utils": "^0.17.0",
    "@sveltia/utils": "^0.5.0",
    "lexical": "^0.17.0"
  },
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.1",
    "@sveltejs/adapter-auto": "^3.2.4",
    "@sveltejs/kit": "^2.5.24",
    "@sveltejs/package": "^2.3.4",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "cspell": "^8.14.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^50.2.2",
    "eslint-plugin-svelte": "^2.43.0",
    "postcss": "^8.4.41",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "sass": "^1.77.8",
    "stylelint": "^16.8.2",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-scss": "^6.5.0",
    "svelte": "^4.2.19",
    "svelte-check": "^3.8.6",
    "svelte-i18n": "^4.0.0",
    "svelte-preprocess": "^6.0.2",
    "tslib": "^2.7.0",
    "vite": "^5.4.2",
    "vitest": "^2.0.5"
  },
  "exports": {
    ".": {
      "types": "./package/index.d.ts",
      "svelte": "./package/index.js",
      "default": "./package/index.js"
    }
  },
  "files": [
    "package"
  ],
  "svelte": "./package/index.js",
  "typesVersions": {
    ">4.0": {
      "index": [
        "./package/index.d.ts"
      ]
    }
  },
  "pnpm": {
    "auditConfig": {
      "ignoreCves": [
        "CVE-2024-4067"
      ]
    }
  }
}
